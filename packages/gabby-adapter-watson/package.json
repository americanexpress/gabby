{
  "name": "gabby-adapter-watson",
  "version": "0.0.0",
  "description": "A Watson Conversation adapter for Gabby.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf build",
    "prewatch": "rm -rf build",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/americanexpress/gabby/tree/master/packages/gabby-adapter-watson"
  },
  "author": "Zach Ripka",
  "license": "Apache-2.0",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coverageDirectory": "test-results",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "./src/components",
      "./src/interfaces.ts"
    ],
    "mapCoverage": true
  },
  "dependencies": {
    "watson-developer-cloud": "^2.34.0"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.9",
    "@types/watson-developer-cloud": "^2.31.0",
    "gabby": "0.0.5",
    "gabby-types": "0.0.5",
    "jest": "^20.0.4",
    "react": "^15.6.1",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "tslint-config-airbnb": "^5.2.1",
    "typescript": "^2.4.1"
  }
}
